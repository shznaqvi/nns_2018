    <style name="SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="spinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">#efefef</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#efefef</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="radiogroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="radiobutton" parent="android:Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="buttons" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/background_grad</item>
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">4dp</item>

    </style>

    <style name="checkbox2" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">4dp</item>

    </style>


