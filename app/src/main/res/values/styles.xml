    <!-- Form Styles -->
    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/background_grad</item>
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:elevation">1dp</item>


    </style>


    <style name="labels2" parent="android:Widget.Material.Light.CheckedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/background_grad</item>
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:elevation">1dp</item>


    </style>

    <style name="listItems" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="errors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">#ffd6d6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff1e1e</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="sub" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/colorRedsub</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">visible</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/colorPrimaryAlpha</item>

    </style>

