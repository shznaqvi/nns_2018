    <!-- Form Styles -->
    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_grad</item>
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:elevation">1dp</item>


    </style>

    <style name="MyPopupMenu" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:popupBackground">@android:color/black</item>
    </style>


    <style name="labels2" parent="android:Widget.Material.Light.CheckedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/background_grad</item>
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:elevation">1dp</item>


    </style>

    <style name="listItems" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="errors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">#ffd6d6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff1e1e</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="sub" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/colorRedsub</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">visible</item>
        <!--<item name="android:padding">8dp</item>-->
        <!--<item name="android:textStyle">italic</item>-->

    </style>

    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColorHint">@color/colorPrimaryAlpha</item>

    </style>


    <!--Floating label text style-->
    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/grayOverlay</item>
        <item name="android:textSize">12sp</item>
        <!--Label color in TRUE state and bar color FALSE and TRUE State-->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
