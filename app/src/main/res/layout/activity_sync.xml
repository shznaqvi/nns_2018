<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.nns_2018.ui.SyncActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSync"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@color/colorPrimary"
                android:elevation="2dp"
                android:padding="16dp"
                android:text="@string/btnSync"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_sync_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/sync_list_adapter"
                android:visibility="visible">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/no_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:text="No item in the list"/>

            <Button
                android:id="@+id/btnUpload"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:elevation="2dp"
                android:padding="16dp"
                android:text="@string/btnUpload"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_upload_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/sync_list_adapter"
                android:visibility="visible">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/no_data_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:text="No item in the list"/>

        </LinearLayout>
    </ScrollView>
</layout>

