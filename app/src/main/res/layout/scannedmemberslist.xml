<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <RelativeLayout
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bacground_border2"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/toic1" />

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imgUser"
            android:paddingTop="@dimen/_5sdp">

            <!-- Family Member Name-->
            <TextView
                android:id="@+id/memberName"
                style="@style/listItems"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Memeber Name"
                android:textColor="#efefef"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <!-- Mother -->
            <TextView
                android:id="@+id/mmEnum"
                style="@style/listItems"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/memberName"
                android:gravity="clip_horizontal"
                android:text="ABCDEFG"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <!-- Father -->
            <TextView
                android:id="@+id/mmHHno"
                style="@style/listItems"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/mmEnum"
                android:gravity="clip_horizontal"
                android:text="ABCDEFG"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <!-- LineNo -->
            <TextView
                android:id="@+id/lineNo"
                style="@style/listItems"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignBaseline="@+id/memberName"
                android:layout_alignBottom="@+id/memberName"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:text="Line No"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- na204 -->
            <TextView
                android:id="@+id/na204"
                style="@style/listItems"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/lineNo"
                android:gravity="right"
                android:text="na204"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Status -->

        </RelativeLayout>

    </RelativeLayout>

</layout>